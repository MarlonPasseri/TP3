@model TP3.Models.Livro

<h2>Editar Livro</h2>

<form asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AutorId" class="control-label"></label>
        <select asp-for="AutorId" asp-items="@(new SelectList(ViewBag.Autores, "Id", "Nome"))" class="form-control"></select>
        <span asp-validation-for="AutorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditoraId" class="control-label"></label>
        <select asp-for="EditoraId" asp-items="@(new SelectList(ViewBag.Editoras, "Id", "Nome"))" class="form-control"></select>
        <span asp-validation-for="EditoraId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>
